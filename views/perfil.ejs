<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Perfil de <%= user.name %></title>
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;600&display=swap" rel="stylesheet" />
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;600&display=swap');

    * {
      box-sizing: border-box;
    }

    body {
      font-family: 'Orbitron', sans-serif;
      background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
      color: #f5f5f5;
      padding: 2rem;
      margin: 0;
      min-height: 100vh;
    }

    section {
      max-width: 700px;
      margin: 0 auto 3rem auto;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 12px;
      padding: 2rem;
      box-shadow: 0 0 20px rgba(0, 255, 255, 0.1);
      backdrop-filter: blur(6px);
      transition: all 0.3s ease-in-out;
    }

    .perfil-header {
      display: flex;
      align-items: center;
      gap: 1.5rem;
      margin-bottom: 2rem;
    }

    .perfil-header img {
      width: 120px;
      height: 120px;
      object-fit: cover;
      border-radius: 50%;
      border: 2px solid #00e6e6;
      box-shadow: 0 0 15px #00ffff88;
    }

    .perfil-info h1 {
      margin: 0 0 0.5rem 0;
      font-weight: 600;
      color: #00ffff;
    }

    .perfil-info p {
      margin: 0;
      color: #ccc;
      font-size: 1rem;
    }

    /* Posts */
    .post {
      background: rgba(255, 255, 255, 0.07);
      border: 1px solid #00e6e633;
      border-radius: 10px;
      padding: 1rem;
      margin-top: 1.5rem;
      box-shadow: 0 0 10px #00ffff22;
    }

    .post h3 {
      margin-top: 0;
      color: #00ffff;
    }

    .post small {
      color: #aaa;
    }

    .post img {
      max-width: 100%;
      border-radius: 8px;
      margin-top: 0.5rem;
    }

    .sin-posts {
      color: #ccc;
      font-style: italic;
      margin-top: 1rem;
    }
    /* Botón volver a inicio */
.btn-volver {
  display: inline-block;
  background-color: #00e6e6;
  color: #0f2027;
  font-weight: bold;
  padding: 0.6rem 1.2rem;
  border-radius: 8px;
  text-decoration: none;
  transition: background-color 0.3s ease, transform 0.3s ease;
  margin-bottom: 1rem;
  user-select: none;
}

.btn-volver:hover {
  background-color: #00ffff;
  transform: scale(1.05);
}

  </style>
</head>
<body>
  <section>
    <a href="/" class="btn-volver">← Volver a Inicio</a>
    <div class="perfil-header">  
      <img src="<%= user.imagen %>" alt="Foto de perfil de <%= user.name %>" />
      <div class="perfil-info">
        <h1><%= user.name %></h1>
        <p>Email: <%= user.email %></p>
      </div>
    </div>

    <h2>Posts de <%= user.name %></h2>

    <% if(posts.length === 0) { %>
      <p class="sin-posts">Este usuario no ha publicado nada todavía.</p>
    <% } else { %>
      <% posts.forEach(post => { %>
        <div class="post">
          <h3><%= post.titulo %></h3>
          <small><%= new Date(post.fecha).toLocaleDateString() %></small>
          <p><%= post.contenido %></p>
          <% if(post.imagen) { %>
            <img src="<%= post.imagen %>" alt="Imagen del post" />
          <% } %>
        </div>
      <% }) %>
    <% } %>
  </section>
</body>
</html>
